{% extends 'base.html.twig' %}

{% block page_title %}{{ 'team.title.show'|trans }}{% endblock %}

{% block content %}

    <table class="table table-striped table-bordered table-responsive">
        <tbody>
        <tr>
            <th>{{ 'team.fields.position'|trans }}</th>
            <td>{{ team.position }}</td>
        </tr>
        <tr>
            <th>{{ 'team.fields.name'|trans }}</th>
            <td>{{ team.name }}</td>
        </tr>
        <tr>
            <th>{{ 'team.fields.linkToPage'|trans }}</th>
            <td>{{ team.linkToPage }}</td>
        </tr>
        <tr>
            <th>{{ 'team.fields.needPlayers'|trans }}</th>
            <td>{% if team.needPlayers %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'team.fields.needCoaches'|trans }}</th>
            <td>{% if team.needCoaches %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'team.fields.image'|trans }}</th>
            <td><img src="{{ team.viewPath(basePath) }}"></td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('team_index') }}">{{ 'action.backToList'|trans }}</a>
    <a class="btn btn-action"
       href="{{ path('team_edit', { 'id': team.id }) }}">{{ 'datatables.actions.edit'|trans }}</a>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="{{ 'action.delete'|trans }}">
    {{ form_end(delete_form) }}
{% endblock %}
