{% extends 'base.html.twig' %}

{% block page_title %}{{ 'team.title.edit'|trans }}{% endblock %}

{% block content %}
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <img src="{{ team.viewPath(base_path) }}">
    <input class="btn btn-primary" type="submit" value="{{ 'datatables.actions.edit'|trans }}"/>
    {{ form_end(edit_form) }}

    <a class="btn btn-default" href="{{ path('team_index') }}">{{ 'action.backToList'|trans }}</a>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="{{ 'action.delete'|trans }}">
    {{ form_end(delete_form) }}
{% endblock %}
