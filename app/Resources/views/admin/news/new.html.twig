{% extends 'base.html.twig' %}

{% block page_title %}{{ 'news.title.new'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-primary" type="submit" value="{{ 'action.create'|trans }}"/>
    {{ form_end(form) }}

    <a class="btn btn-default" href="{{ path('news_index') }}">{{ 'action.backToList'|trans }}</a>
{% endblock %}

{% block javascript_body %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('js/adminNews.js') }}"></script>
{% endblock %}
